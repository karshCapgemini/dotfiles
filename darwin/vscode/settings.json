{
    "chat.commandCenter.enabled": false,
    "workbench.startupEditor": "none",
    "files.exclude": {
        "**/.cache": true,
        "**/.devcontainer": true,
        "**/.idea": true,
        "**/.pyenv": true,
        "**/.venv": true,
        "**/.vscode": true,
        "**/*.ges": true,
        "**/*.pdf": true,
        "**/build": true,
        "dependencies.lock": true,
        "managed_components": true
    },
    "editor.rulers": [100],
    "extensions.ignoreRecommendations": true,
    "explorer.confirmDelete": false,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "telemetry.editStats.enabled": false,
    "telemetry.telemetryLevel": "off",

    "editor.fontFamily": "'JetBrainsMono NF'",
    "terminal.external.windowsExec": "",
    "terminal.integrated.fontFamily": "'JetBrainsMono NF'",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontWeight": "normal",

    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.cursorBlinking": "phase",

    "workbench.iconTheme": "material-icon-theme",

    "editor.scrollbar.horizontalScrollbarSize": 0,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "workbench.editor.titleScrollbarVisibility": "hidden",
    "editor.fontSize": 13,
    "workbench.editor.editorActionsLocation": "titleBar",

    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.packageIndexDepths": [
        {
            "name": "sklearn",
            "depth": 2
        },
        {
            "name": "matplotlib",
            "depth": 2
        },
        {
            "name": "scipy",
            "depth": 2
        },
        {
            "name": "django",
            "depth": 2
        },
        {
            "name": "flask",
            "depth": 2
        },
        {
            "name": "fastapi",
            "depth": 2
        },
        {
            "name": "cuda",
            "depth": 3,
            "includeAllSymbols": true
        }
    ],

    // vim -------------------------------------------------------------------------------------------
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.vimrc",
    "idf.hasWalkthroughBeenShown": true,
    "idf.pythonInstallPath": "/usr/bin/python3",
    "idf.espIdfPath": "/Users/zul/Projects/esp/v5.5.1/esp-idf",
    "idf.toolsPath": "/Users/zul/.espressif",
    "idf.gitPath": "git",
    "idf.showOnboardingOnInit": false,
    "window.customTitleBarVisibility": "windowed",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.navigationControl.enabled": false,
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "editor.renderWhitespace": "none",
    "workbench.statusBar.visible": false,
    "workbench.colorTheme": "GitHub Dark Default",
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "chat.viewSessions.orientation": "stacked",
    "C_Cpp.intelliSenseEngine": "disabled",
    "workbench.activityBar.location": "top",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    }
}
