# Neovim ------------------------------------------------------------------------------------------

nedit() {
    pushd ~/.config/dotfiles/nvim/lua/ > /dev/null;
	vi lua .
    popd > /dev/null
}


# ZSH ---------------------------------------------------------------------------------------------

zedit() {
    pushd ~/.config/dotfiles/zsh/configs > /dev/null;
	vi .
    popd > /dev/null
}

alias zupdate="source ~/.zshrc"
alias ztime="time zsh -i -c exit"


# TMux --------------------------------------------------------------------------------------------

alias tedit="$EDITOR ~/.config/tmux/tmux.conf"
alias tupdate="tmux source-file ~/.config/tmux/tmux.conf"

tm() {
    alias TML="tmux ls | fzf --height=30% --border=rounded | cut -f 1 -d ':' 2>/dev/null"

    if [ -n "$TMUX" ]; then
        echo "Sessions Switch"
        session=$(TML);

        if [ -n "$session" ]; then
            tmux switch-client -t "$session";
        fi

    elif [ -n "$(tmux ls 2>/dev/null)" ]; then
        echo "Session Connect"
        tmux attach-session -t $(TML) 2>/dev/null

    else
        echo "Session Create"
        tmux
    fi
}

